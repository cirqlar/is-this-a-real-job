      h4 {
        font-size: 150% !important;
      }

      .block-btn {
        margin-right: 7px !important;
      }

      .single_user {
        width: 85% !important;
        margin: auto !important;
      }

      .button-div {
        margin-left: -10% !important;
        width: 120% !important;
      }
    }
  }
